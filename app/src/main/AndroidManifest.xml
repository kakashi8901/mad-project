<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foddie.food">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShowUsersDetail"></activity>
        <activity android:name="com.foddie.food.ShowReviewActivity" />
        <activity android:name="com.foddie.food.AddNewRestrauntScreen" />
        <activity android:name="com.foddie.food.RestrauntDetailActivity" />
        <activity
            android:name="com.foddie.food.SplashActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UsersProfileActivity" />
        <activity android:name="com.foddie.food.RegistrationActivity" />
        <activity
            android:name="com.foddie.food.SignInScreen"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name="com.foddie.food.HomeActivity" />
    </application>

</manifest>